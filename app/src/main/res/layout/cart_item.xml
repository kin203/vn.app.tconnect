<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/layout_giohang"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <RelativeLayout
                android:id="@+id/sp1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#fff">
                <ImageView
                    android:id="@+id/anhgh1"
                    android:layout_width="200dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/common_google_signin_btn_text_dark"/>

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:contentDescription="Clear icon"
                        android:drawableTop="@drawable/baseline_clear_24"
                        android:padding="20dp"
                        android:textSize="24sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ttsp1"
                    android:layout_width="180dp"
                    android:layout_height="126dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="21dp"
                    android:background="#fff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tengh1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="MÀN HÌNH MSI"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/giagh1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tengh1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="4.499.000 VNĐ"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:descendantFocusability="beforeDescendants">

                        <TextView
                            android:id="@+id/txtSL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="SL "
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:drawableLeft="@drawable/addsl_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_marginTop="5dp"
                            android:textSize="25sp"/>
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:drawableLeft="@drawable/removesl_icon" />
                    </LinearLayout>
                </LinearLayout>
                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="95dp" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>